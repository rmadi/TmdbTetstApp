{
  "name": "Pokemon",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "start:dev": "cross-env BASE_API_URL=https://pokeapi.co/api/v2 react-native start",
    "android:dev": "cross-env BASE_API_URL=https://pokeapi.co/api/v2 react-native run-android",
    "ios:dev": "cross-env BASE_API_URL=https://pokeapi.co/api/v2 react-native run-ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "typewatch": "tsc --noEmit --watch"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest.setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-navigation|@shopify/flash-list|lottie-react-native|react-native-sound|@reduxjs/toolkit|immer)/)"
    ],
    "setupFiles": [
      "<rootDir>/node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "moduleNameMapper": {
      "^@env$": "<rootDir>/__mocks__/@env.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 60,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^9.5.0",
    "@react-native/new-app-screen": "0.82.0",
    "@react-navigation/bottom-tabs": "^7.8.5",
    "@react-navigation/native": "^7.1.20",
    "@react-navigation/native-stack": "^7.6.3",
    "@reduxjs/toolkit": "^2.10.1",
    "@rneui/base": "^0.0.0-edge.2",
    "@rneui/themed": "^0.0.0-edge.2",
    "@shopify/flash-list": "^2.1.0",
    "@types/react-native-dotenv": "^0.2.2",
    "i18n-js": "^4.5.1",
    "i18next": "^25.6.2",
    "install": "^0.13.0",
    "lottie-react-native": "^7.3.4",
    "react": "19.1.1",
    "react-i18next": "^16.3.3",
    "react-native": "0.82.0",
    "react-native-config": "^1.6.0",
    "react-native-dotenv": "^2.5.3",
    "react-native-gesture-handler": "^2.29.1",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "^4.1.5",
    "react-native-rename": "^3.2.17",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.18.0",
    "react-native-sound": "^0.13.0",
    "react-native-svg": "^15.14.0",
    "react-native-svg-transformer": "^1.5.1",
    "react-native-vector-icons": "^10.3.0",
    "react-native-worklets": "^0.6.1",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.82.0",
    "@react-native/eslint-config": "0.82.0",
    "@react-native/metro-config": "0.82.0",
    "@react-native/typescript-config": "0.82.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.1",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "cross-env": "^10.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "msw": "^2.11.5",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.1",
    "typescript": "^5.8.3",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=20"
  }
}
